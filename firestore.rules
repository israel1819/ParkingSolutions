rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public data for cars - accessible by any authenticated user for read, only valets for write
    match /artifacts/{appId}/public/data/parkings/{parkingId} {
      allow read: if request.auth != null;
      // Valets can create new parking entries and update existing ones
      allow write: if request.auth != null && get(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)/userData/$(request.auth.uid)).data.role == 'valet';
    }

    // User-specific data (roles, employee names)
    // Each user can read/write their own profile data
    match /artifacts/{appId}/users/{userId}/userData/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to read all user data (for employee list in admin dashboard)
    match /artifacts/{appId}/users/{userId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)/userData/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
